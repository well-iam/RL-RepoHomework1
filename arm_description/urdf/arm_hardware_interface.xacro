<?xml version="1.0"?>

<!-- arm_hardware_interface.xacro -->

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Macro for a hardware interface for a joint -->
  <xacro:macro name="hardware_interface_for_joint" params="hardware_interface_type">
    <ros2_control>
      
      <!-- ros2_control hardware interface configuration -->
      <hardwareInterface>${hardware_interface_type}</hardwareInterface>

    </ros2_control>
  </xacro:macro>

</robot>